body {  padding: 0;   -webkit-overflow-scrolling: touch}
.menu{ width: 86%;-webkit-overflow-scrolling: touch;}
.innerMenu,.innerMain{width: 100%;overflow: auto}
.banner img{width: 100% }

/*一级分类*/
.typeList{margin-bottom: 1rem}
.typeList h3{font-size: 1.4rem;background: #f7f7f7;line-height: 4.4rem;padding: 0 2rem}
/*二级分类*/
.typeList2{padding: 0 .8rem;font-size: 1.3rem;color:#666;background: #fff;}
.typeList2 li{width: 30%;text-align: center;padding-bottom: 1rem;float: left}
.typeList2 li:nth-child(2),.typeList2 li:nth-child(2n+3){margin:0 5%}
.typeList2 li:nth-child(3){margin:0}
.typeList2 li img,.typeList2 li div{width:100%;}


/*遮罩层*/
.bodyMask{width:100%;height: 100%;background: rgba(0,0,0,0.5);position: absolute;top:0;left: 0;z-index: 11; }
.slideLogo{width: 4.2rem;position: absolute;
    left:0;;top:40%;z-index: 12}

.main{width:100%;position: relative}
.proList{background: #f7f7f7;overflow: auto;padding-top: 4.4rem}
.proList ul li{height:23rem;margin-bottom: 1rem;background: no-repeat center center;background-size: cover;position: relative}
.proList ul li a{display: block;width: 100%;height: 100%}
.proList ul li .hGroup{width:24.5rem;padding-top:1rem;background: rgba(225,225,225,0.8);position: absolute;left: 50%;bottom:0;margin-left: -11.5rem}
.proList ul li .hGroup h3{height: 2rem;line-height:2rem;font-size: 1.8rem}
.proList ul li .hGroup p{height: 3rem;line-height: 3rem;font-size: 1.4rem}
.proList ul li .customType{position: absolute;left: 0;top:0;color: #fff;padding:0 1.5rem 0 .5rem ;line-height: 2rem;
    background:transparent url("../../../public/images/customLife/customType.png") no-repeat left top;background-size: 100%}

.noData{display: block}