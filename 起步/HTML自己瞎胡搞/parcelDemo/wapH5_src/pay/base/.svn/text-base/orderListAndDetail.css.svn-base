
/*订单列表*/
/*导航*/
nav{position: fixed;top:4.4rem;z-index: 10;font-size: 1.4rem;height:4.4rem;line-height: 4.4rem;background: #f7f7f7}
nav .all{position: relative;background: url("../../public/images/base/downArr.png") no-repeat right center;background-size: .8rem;}
nav .all.active{background-image: url("../../public/images/base/upArr.png")}
nav .all p{padding: 0 1rem}
nav .all ul{position: absolute;left:0;top:4.4rem;text-align: center;width:8rem;display: none;background: #fff}
nav .all ul:after{content:"";position: absolute;left:3rem;top:-.9rem;border-bottom:1rem solid #fff;border-left:1rem transparent solid;border-right: 1rem transparent solid;}
nav .all ul:before{content:"";position: absolute;left:2.9rem;top:-1rem;border-bottom:1.1rem solid #ededed;border-left:1.1rem transparent solid;border-right:1.1rem transparent solid;}
nav .all ul li{line-height: 3rem;border: .1rem solid #ededed;border-top: none}
nav .all ul li:first-of-type{border-top: .1rem solid #ededed;}
nav .statusList>li{padding: 0 1rem;transition: 0.3s}
nav .statusList .active{color: #ff3b30}

/*列表*/
#wrapper{margin-top: 8.8rem}
.list{background: #fff}
.list li{padding-top: 10px;border-bottom: 1px #ededed solid;background: url("../../public/images/base/goArr.png") no-repeat right 5px;background-size: 3rem;}
.list li .pic{width: 5rem;height: 5rem;border-radius: 4px;margin:0 5px 0 10px;background: no-repeat center center;background-size: cover;position: relative}
.list li .title,.list li .guiGe {height: 1.8rem;}
.list li .guiGe .num{margin-left: 5px;}
.list li time{display:inline-block;padding-bottom:10px;}
.list li .type1{width:8rem;margin:2.5rem 10px 0 0; text-align: center;}
.list li .type1 .payNow,.list li .type1 .shouHuo,.list li .type1 .pingJia{background:#ff3b30;color:#fff;width:8rem;height:3rem;line-height:3rem; border-radius: 4px;font-size: 1.2rem}
.list li .type1 span{display: inline-block;height:3rem;line-height:3rem;font-size: 1.2rem}
.list li .type2{border-top: 1px #ededed solid}
.list li .type2>div{width: 49.8%;line-height: 4rem}
.list li .type2>div:first-of-type{border-right: 1px #ededed solid}
.list li .type2>div a{display: block}
.list li .payNow:active{background: #b22922}


/*返回样式*/
.goTop{bottom: 1.5rem;}


/*订单详情*/
.orderDetail{background: #f7f7f7;margin-bottom:4.4rem;}
.orderDetail section{background: #fff;margin-bottom: 1rem;padding:0 1rem;}

/*.orderDetail .sec1{margin-top: 4.4rem;}*/
.orderDetail .sec1 p,.orderDetail .sec2 p,.orderDetail .sec3 p,.orderDetail .sec5 p{padding: 1rem 0;}

.orderDetail .sec1 img{width: 7rem;}

.orderDetail .sec2 p{word-break: break-all}

.orderDetail .sec4 span{color:#666}
.orderDetail .sec4 .top li{border-bottom: 1px #ededed solid;padding: 10px 0}
.orderDetail .sec4 .pic{width: 6.4rem;height: 6.4rem;border-radius: 4px;margin-right: 5px;float: left;background: no-repeat center center;background-size: cover;position: relative}
.orderDetail .sec4 .title,.orderDetail .sec4 .guiGe{width:57%}
.orderDetail .sec4 .price,.orderDetail .sec4 .num{float: right;width: 20%;text-align: right}
.orderDetail .sec4 .title,.orderDetail .sec4 .price{height: 2.5rem;line-height:2.5rem;}
.orderDetail .sec4 .title{float: left}
.orderDetail .sec4 .bot{padding-top: 1rem;}
.orderDetail .sec4 .bot li{padding-bottom: 1rem}
.orderDetail .sec4 .bot li span{display: inline-block;}
.orderDetail .sec4 .bot li span:first-of-type{width: 32%}
.orderDetail .sec4 .bot li span:last-of-type{width:68%;text-align: right}
.orderDetail .sec4 .bot li:last-of-type span:last-of-type{color:#ff3b30}

.orderDetail .sec5 a{float: right;width: 3rem;height: 3rem;margin-top: 2px;background: url("../../public/images/products/phone.png") no-repeat center center;background-size: 30px;}
.orderDetail .sec6{padding: 10px 10px 6px;}
.orderDetail .sec6 p{margin-bottom: 4px;}

/*按钮组*/
.orderDetail .btnGroup{height:5rem;position: fixed;bottom:0;background: #f7f7f7}
.orderDetail .btnGroup button,.orderDetail .btnGroup .payNow{background:#fff;padding: 0 1rem;float: left;border:1px #ff3b30 solid;line-height: 3.2rem;border-radius: 4px;margin:.8rem 0 0 .5rem;}
.orderDetail .btnGroup .keFu,.orderDetail .btnGroup .close{border: 1px #bababa solid}
.orderDetail .btnGroup .keFu{padding-left: 3rem;background: #fff url("../../public/images/personal/keFu.png") no-repeat 10px center;background-size: 1.2rem}


.orderDetail .btnGroup button:active{background-color: #ededed!important;}
