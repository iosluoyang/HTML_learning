*{margin: 0;padding: 0;}
ul,li{list-style: none;}
a{text-decoration: none;color:#595757}
img{width: 100%;}
html{font-size: 62.5%;}
body{font-size: 1rem;color:#595757;font-family: HelveticaNeue; }
.border{border: .2rem solid #ebc7db;border-radius: 1.3rem;box-shadow: -0.2rem 0.2rem .5rem rgba(0,0,0,0.3);}
.clearfix:after{content:"";display: block;clear: both}

/*首页*/
.rule{position: relative;}
.rule a{position: absolute;right: 1rem;top:1.5rem;width: 7.5rem;height:1.8rem;line-height: 1.8rem;color:#fff;
background: #ff5b75;border-radius: .8rem;text-align: center;}



/*福利*/
.sec2 {padding-bottom: 1rem;}
.sec2 li{padding:2rem 1.5rem;border-bottom:.1rem #ffcb10 solid;}
.sec2 .pic{width:14.5rem;float:left;}
.sec2 div{margin-left: 16rem}
.sec2 h3{font-size: 1.5rem;color:#f72502;line-height: 1.8rem;margin-bottom: .5rem;}
.sec2 .copyRight{position: relative}
.sec2 .copyRight:after{content:"";position: absolute;left:6rem;top:0;width: .8rem;height: .8rem;
    background: url("../../public/images/proStars/may/welfare/copyRight.png") no-repeat center center;background-size: .8rem}

.sec2 p{font-size: 1.2rem;line-height: 1.6rem;margin-bottom: 1.7rem;}
.sec2 span{color:#f72502;padding-left: 1rem;position: relative}
.sec2 span:after{content: "";width: .45rem;height:.45rem;background: #f72502;border-radius: 50%;position: absolute;left: 0;top:.2rem}
/*冠军*/
.sec3{position: relative;margin:-2.5rem 1.5rem 2.5rem;padding: 2.6rem 1.5rem 2rem;background: #fff;font-size: 1.4rem}
.sec3 .top{position: absolute;top:-1.7rem;left: 50%;margin-left:-9.5rem;width: 19rem;}

.sec4 {position: relative;margin: 2.5rem 1.5rem;padding: .8rem 1.5rem 4.3rem;background: #fff;}
.sec4 .top{position: absolute;top:-1.7rem;left: 50%;margin-left:-5rem;width: 10rem;}
.sec4>.reason{text-align: center;width:12.5rem;border:.1rem solid #e74033;border-radius: .6rem;margin: 0 auto;overflow: hidden}
.sec4>.reason2{width: 28rem}
.sec4>.reason h3{color:#e74033;padding-top: .8rem;line-height: 1.8rem}
.sec4>.reason p{background:#e74033;color:#fff;line-height: 1.6rem}


.sec4 li{padding: 1.2rem;border-bottom: .1rem #ededed solid;position: relative;}
.sec4 li .pic{width:8.6rem;float:left;position: relative}
.sec4 li div{margin-left: 9.2rem;}
.sec4 li h3{margin-bottom: 1rem;font-size: 1.4rem}
.sec4 li p{color:#ff3b30;font-size: 1.4rem;margin-bottom: 1rem}
.sec4 li h4{font-weight: bold}
.sec4 li h4,.sec4 li .reason{color:#e63e31;font-size: 1rem;}
.sec4 li p span{color:#999;font-size: 1rem;margin-left: .5rem;text-decoration: line-through;}
















