body{padding-top: 4.4rem;background: #f7f7f7}

/*收货地址列表样式*/
.index .addList li{padding: 1rem;border-bottom: 1px #ededed solid;background: #fff;position: relative}
.index .addList .rangflag{position: relative}
.index .addList .rangflag:after{content:"";position: absolute;left:0;top:0;width:80%;height: 100%;margin-right: 4rem;
    background: rgba(255,255,255,0.6) url("../../../public/images/personal/rangOut.png") no-repeat  85% center;background-size: 5rem}

.index .addList li .isDefault{color:#ff645c;}
.index .addList li .user{padding-bottom: 1rem;}
.index .addList li .user span:first-of-type{margin-right: 2rem;}
.index .addList li .user,.index .addList li .address{margin-right: 7rem;}
.index .addList li .edit{width:5rem;height:4rem;border-left: .1rem #ededed solid;position: absolute;right:2rem;top:50%;margin-top: -2rem;
    background: url("../../../public/images/personal/edit.png") no-repeat right center;background-size:3rem;}
.index .addList li .isDefault{width: 3rem ;height:1.7rem;margin-right:.2rem;}

/*添加和更改收货地址样式*/
.addAddress  li{padding: 0 1rem;border-bottom: 1px #ededed solid;height:4.4rem;background: #fff}
.addAddress  label,.addAddress form input,.addAddress #indexAddress{display: inline-block;height:4.4rem;line-height:4.4rem;vertical-align: middle;}
.addAddress  label{width: 30%;font-size: 1.5rem}
.addAddress  input,.addAddress #indexAddress{width: 70%;border:none;background: rgba(0,0,0,0);color:#999;font-size: 1.4rem;}
.addAddress  div{color: #ff3b30;line-height: 4.4rem;}
.addAddress .marginBot{margin-bottom: 10px;}




/*遮罩层*/
.mask { display: none; position: absolute; top: 0; left: 0; z-index: 12; width: 100%; height: 100%; background-color: rgba(0,0,0,.5); }

@media (min-width: 768px) and (max-width: 1920px) {
    .browser { width: 100%; height: 460px; }
    .express-area-box { width: 100%; left:0;margin-left: 0}
    .express-area-box .header{width: 100%;left:0}
    .express-area-box .header h3 { font-size: 1.2rem; line-height: 1.7rem; }
    .express-area-box article { height: 12rem; }
    .area-list li { padding: .3rem; font-size: .6rem; line-height: 1rem; }
}
@media (max-width: 768px) {
    .browser { width: 100%; height: 100%; }
    .express-area-box { position: fixed; left: 0; width: 100%; margin-left: 0; }
    .mask { position: fixed; }
}














